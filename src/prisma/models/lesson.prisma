model Lesson {
  id          Int      @id @default(autoincrement())
  courseId    Int
  title       String
  description String?
  content     Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course      Course               @relation(fields: [courseId], references: [id])
  quizzes     Quiz[]
  progresses  UserLessonProgress[]
}
